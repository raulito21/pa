#include <stdio.h>
# include <stdbool.h>

void palindrom(int n)
{
    int m = n;
    int c = 0;
    while (m != 0)
    { c = c * 10 + m % 10;
        m = m / 10; }
    if (c == n)
        printf("este palindrom");
    else
    {
        printf("nu este palindrom");
    }
}
int main()
    { int n;
        printf("introduceti un numar \n");
        scanf("%d", &n);
        palindrom(n);
    }
